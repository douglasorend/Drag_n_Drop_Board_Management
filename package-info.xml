<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>Dougiefresh:DDBM</id>
	<name>Drag & Drop Board Management</name>
	<type>modification</type>
	<version>1.6</version>

	<install for="2.0 - 2.0.99">
		<code>add_remove_hooks.php</code>
		<readme parsebbc="true">readme.txt</readme>
		<modification>install_20x.xml</modification>
		<modification>language_english.xml</modification>
		<require-file name="Subs-DragDropBoards.php" destination="$sourcedir" />
		<require-file name="drag_drop_boards_20x.css" destination="$themedir/css" />
		<require-file name="drag_drop_boards.js" destination="$themedir/scripts" />
	</install>
	<uninstall for="2.0 - 2.0.99">
		<code>add_remove_hooks.php</code>
		<modification reverse="true">install_20x.xml</modification>
		<modification reverse="true">language_english.xml</modification>
		<remove-file name="$sourcedir/Subs-DragDropBoards.php" />
		<remove-file name="$themedir/css/drag_drop_boards_20x.css" />
		<remove-file name="$themedir/scripts/drag_drop_boards.js" />
	</uninstall>

	<install for="2.1 Beta 2">
		<code>add_remove_hooks.php</code>
		<readme parsebbc="true">readme.txt</readme>
		<modification>install_21x.xml</modification>
		<modification>language_english.xml</modification>
		<require-file name="Subs-DragDropBoards.php" destination="$sourcedir" />
		<require-file name="drag_drop_boards_21x.css" destination="$themedir/css" />
		<require-file name="drag_drop_boards.js" destination="$themedir/scripts" />
	</install>
	<uninstall for="2.1 Beta 2>
		<code>add_remove_hooks.php</code>
		<modification reverse="true">install_21x.xml</modification>
		<modification reverse="true">language_english.xml</modification>
		<remove-file name="$sourcedir/Subs-DragDropBoards.php" />
		<remove-file name="$themedir/css/drag_drop_boards_21x.css" />
		<remove-file name="$themedir/scripts/drag_drop_boards.js" />
	</uninstall>
</package-info>